<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/bsckground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/logo"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"/>

        <LinearLayout
            android:id="@+id/layoutSelecionar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible">

            <android.support.v7.widget.CardView
                android:id="@+id/matricula"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:background="@color/colorAccentLight"
                android:backgroundTint="@color/colorAccentLight">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Matrícula"
                    android:background="@color/colorAccentLight"
                    android:backgroundTint="@color/colorAccentLight"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/login"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@color/colorAccentLight"
                android:backgroundTint="@color/colorAccentLight">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Login"
                    android:background="@color/colorAccentLight"
                    android:backgroundTint="@color/colorAccentLight"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/nomeAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do aluno"
                android:layout_marginBottom="6dp"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/cpfAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF do aluno"
                android:layout_marginBottom="6dp"
                android:inputType="number"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/emailAluno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail do aluno"
                android:layout_marginBottom="6dp"
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código da diciplina"
                android:layout_marginBottom="3dp"/>

            <Spinner
                android:id="@+id/codDisciplina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnMatricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solicitar matrícula"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                style="@style/Base.Widget.AppCompat.Button.Colored"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:layout_marginBottom="6dp"
                android:inputType="text"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Código identificador"
                android:layout_marginBottom="10dp"
                android:inputType="number"
                android:imeOptions="actionDone"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entrar"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                style="@style/Base.Widget.AppCompat.Button.Colored"/>

        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>